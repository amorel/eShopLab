@model IEnumerable<eShopLab.Models.UnitType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UnitTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitTypeSymbol)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UnitTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitTypeSymbol)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UnitTypeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.UnitTypeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UnitTypeID })
        </td>
    </tr>
}

</table>

@section scripts{
    <script>
        $(".product-menu").addClass("active");
        $("#unittype-submenu").addClass("active");
    </script>
}