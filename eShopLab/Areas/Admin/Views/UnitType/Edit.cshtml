@model eShopLab.Models.UnitType

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>UnitType</legend>

        @Html.HiddenFor(model => model.UnitTypeID)

        <div class="editor-label">
            @Html.LabelFor(model => model.UnitTypeName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UnitTypeName)
            @Html.ValidationMessageFor(model => model.UnitTypeName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UnitTypeSymbol)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UnitTypeSymbol)
            @Html.ValidationMessageFor(model => model.UnitTypeSymbol)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
