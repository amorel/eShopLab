<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js">
<!--<![endif]-->

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>SPACEADMIN</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    @Styles.Render("~/bundles/cssadmin")

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/images/favicon.ico" type="image/x-icon">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="assets/js/html5shiv.js"></script>
    <script src="assets/js/respond.min.js"></script>
    <![endif]-->
</head>

<body class="animated fadeIn">
    <section id="container">
        <header id="header">
            <!--logo start-->
            <div class="brand">
                <a class="logo" href="@Url.Action("Index", "Home")"><span>&nbsp;Space</span>&nbsp;Admin</a>
            </div>
            <!--logo end-->
            <div class="toggle-navigation toggle-left">
                <button type="button" class="btn btn-default" id="toggle-left" data-toggle="tooltip" data-placement="right" title="Toggle Navigation">
                    <i class="fa fa-bars"></i>
                </button>
            </div>
            <span class='title'></span>
            <div class="toggle-navigation toggle-right">
                <a href="@Url.Action("Index", "Home", new { Area = "" })"><span class="glyphicon glyphicon-log-out"></span></a>
            </div>
        </header>
        <!--sidebar left start-->
        <aside class="sidebar">
            <div id="leftside-navigation" class="nano">
                <ul class="nano-content">
                    <li class="dashboard-menu">
                        <a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i><span>Dashboard</span></a>
                    </li>
                    <li class="sub-menu product-menu">
                        <a href="javascript:void(0);"><i class="fa fa-cogs"></i><span>Products</span><i class="arrow fa fa-angle-right pull-right"></i></a>
                        <ul>
                            <li id="category-submenu">@Html.ActionLink("Category", "Index", "Category")
                            </li>
                            <li id="product-submenu">@Html.ActionLink("Product", "Index", "Product")
                            </li>
                            <li id="sizecategory-submenu">@Html.ActionLink("Category size", "Index", "SizeCategory")
                            </li>
                            <li id="price-submenu">@Html.ActionLink("Price", "Index", "Price")
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>

        </aside>
        <!--sidebar left end-->
        <!--main content start-->
        <section class="main-content-wrapper">
            <section id="main-content">
                @RenderBody()
            </section>
        </section>
        <!--main content end-->
    </section>

</body>
@Scripts.Render("~/bundles/script")
@RenderSection("scripts", false)
</html>
