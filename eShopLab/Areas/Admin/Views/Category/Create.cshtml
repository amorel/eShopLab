@model eShopLab.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<span class="title">Create Category</span>

@using (Html.BeginForm("Create", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="editor-label">
            <label for="CategoryName">Category Name</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CategoryName)
            @Html.ValidationMessageFor(model => model.CategoryName)
        </div>

        <div class="editor-label">
            <label for="CategoryName">Category Description</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CategoryDescription)
            @Html.ValidationMessageFor(model => model.CategoryDescription)
        </div>

        <div class="editor-label">
            <label for="CategoryName">Is in the menu?</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CategoryIsMenu)
            @Html.ValidationMessageFor(model => model.CategoryIsMenu)
        </div>

        <div class="editor-label">
            <label for="CategoryName">Media</label>
        </div>
        <div class="editor-field">
            <input type="file" name="File" />
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
