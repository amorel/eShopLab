@model eShopLab.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@{Html.EnableClientValidation(true);}
@{Html.EnableUnobtrusiveJavaScript();}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="editor-label">
            <label for="CategoryName">Category Name</label>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.CategoryName, new { autocomplete="off" })
            @Html.ValidationMessageFor(model => model.CategoryName)
        </div>

        <div class="editor-label">
            <label for="CategoryName">Category Description</label>
        </div>
        <div class="editor-field">

            @Html.TextBoxFor(model => model.CategoryDescription, new { autocomplete="off" })
            @Html.ValidationMessageFor(model => model.CategoryDescription)
        </div>

        <div class="editor-label">
            <label for="CategoryName">Is in the menu?</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CategoryIsMenu)
            @Html.ValidationMessageFor(model => model.CategoryIsMenu)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section scripts{
    <script>
        $(".title").html("Create Category");
    </script>
}